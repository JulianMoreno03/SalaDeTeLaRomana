---
import { Image } from "astro:assets";
import imgBackground from "../../../public/imgFondo.webp";
import { Icon } from 'astro-icon/components'
import '@fontsource/roboto';
import '@fontsource-variable/oswald';
---

<section class="relative w-full md:h-screen h-64 overflow-hidden flex flex-col justify-center ">
    <div class="relative w-full h-full">
        <Image
          src={imgBackground}
          decoding="async"
          loading="lazy"
          alt="Foto de la decoración del lugar."
          class="absolute object-cover bg-cover w-full h-full"
        />

    <article
        class="absolute w-full md:h-screen h-72 flex justify-center md:justify-start items-center  p-10 md:pl-32"
    >
        <div
            class="flex flex-col justify-center items-center md:gap-6 gap-3
        bg-white bg-opacity-20 backdrop-blur-xl  md:w-96 md:h-64 h-52 rounded-xl md:p-5"
        >
            <p class="font-Oswald text-center w-[230px] text-sm md:text-xl  text-orange-900 font-bold">
                QUE TU FIESTA SEA
                <span class="text-2xl md:text-4xl">INOLVIDABLE</span>
            </p>
            <p class="font-roboto text-center text-lg md:text-xl w-48 md:w-[220px]  text-orange-950 font-bold">
                El lugar perfecto para esa fiesta soñada
            </p>
            <a href="contact"
                class="font-Oswald flex text-lg bg-orange-900 px-3 py-2 md:px-6 md:py-3 font-bold text-white rounded-xl hover:bg-orange-800 duration-300"
                >CONTACTANOS
                <Icon name="contacto" class='ml-3 w-8 h-6'/>
            </a>
                
        </div>
    </article>
</section>
