---
import { Icon } from 'astro-icon/components'

---
<header class="md:flex md:justify-center w-full">
    <div class="md:flex md:justify-between p-2 md:w-[90%] w-full">
        <a href="/" aria-label="Ir a la página de inicio">
            <h1 class="font-bold p-2 w-[150px] text-xl">
                SALA DE TÉ 
                <span class="text-orange-700">LA ROMANA</span>
            </h1>
        </a>

        <ul class="flex md:gap-20 gap-5 justify-center items-center font-bold text-xs md:text-sm text-orange-700">
            <li>
                <a href="../#sobreNosotros" class="flex gap-2 p-2 items-center border-2 border-white hover:border-orange-700 rounded-2xl transition duration-200">
                    <Icon name="nosotros" class="w-8 h-6" aria-hidden="true"/>
                    SOBRE NOSOTROS
                </a>
            </li>
            <li>
                <a href="#" class="p-2 border-2 border-white hover:border-orange-700 rounded-2xl transition duration-200">
                    PRODUCTOS
                </a>
            </li>
            <li>
                <a href="contact" class="flex gap-2 items-center bg-orange-900 p-2 border-b-2 border-white text-white rounded-xl transition duration-200 hover:bg-orange-800">
                    CONTACTO
                    <Icon name="contacto" class="w-8 h-6" aria-hidden="true"/>
                </a>
            </li>
        </ul>
    </div>
</header>
